{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "**/unit/**/*.[jt]s?(x)",
    "**/unit/(*.)+(spec|test).[tj]s?(x)"
  ],
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}